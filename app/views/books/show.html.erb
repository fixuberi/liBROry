<div class="row justify-content-center">
  <div class="col-sm-3">
    <div style="width: 200px; height: 250px">
      <%= image_tag @book.cover, class: 'img-fluid' %>
    </div>
  </div>

  <div class="col-sm-3">
    <h1><%= @book.title %></h1>
    <%= render 'shared/edit_link', item: @book %>
    <%= render 'shared/delete_link', item: @book %>

    <span>Authors: <%= render 'shared/author_show_links', book: @book %></span>
    <span>Groups: <%= render 'shared/group_show_links', book: @book %></span>
  </div>
</div>
